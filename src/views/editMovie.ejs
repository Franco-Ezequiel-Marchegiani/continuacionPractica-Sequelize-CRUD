<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/css/style.css' />
    <title>Document</title>
</head>

<body>
    <h1> Editar Película</h1>
    <br>
    <a href="/movies">Volver al inicio</a>
    <br>
    <br>
    <form action="/movies/update/<%= movie.id %>?_method=PUT" method="POST">
        <div>
            <label for="title">Titulo</label>
            <input type="text" name="title" id="title" value="<%= movie.title %>">
        </div>
        <div>
            <label for="premios">Premios</label>
            <input type="number" name="premios" id="premios" value="<%= movie.awards %>">
        </div>
        <div>
            <label for="duracion">Duración</label>
            <input type="number" name="duracion" id="duracion" value="<%= movie.length %>">
        </div>
        <div>
            <label for="rating">Rating</label>
            <input type="number" name="rating" id="rating" value="<%= movie.rating %>">
        </div>
        <div>
            <label for="relase_date">Fecha de estreno</label>
            <input type="date" name="relase_date" id="relase_date" value="<%= movie.release_date %>">
        </div>
        <div>
            <label for="rating">Genero</label>
            <select name="genero" value="<%= movie.genre_id %>">
                <% generos.forEach(genero=> {%>
                    <% if (genero.id==movie.genre_id) { %>
                        <option value="<%= genero.id %>" selected>
                            <%= genero.name %>
                        </option>
                        <% } else {%>
                            <option value="<%= genero.id %>">
                                <%= genero.name %>
                            </option>
                            <% } %>
                                <%})%>
            </select>
        </div>
        <br>
        <button type="submit">Crear</button>
    </form>
</body>

</html>